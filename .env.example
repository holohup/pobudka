# Telegram bot configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Enabled providers (comma-separated)
ENABLED_PROVIDERS=claude,codex

# Scheduler settings
SCHEDULER_STATE_PATH=data/scheduler_state.json
SCHEDULER_AUTH_RECHECK_SECONDS=60
SCHEDULER_RETRY_BASE_SECONDS=60
SCHEDULER_RETRY_MAX_SECONDS=3600

# Claude provider settings
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_WAKEUP_MESSAGE=hi
CLAUDE_RESET_MODE=clock_aligned_hour
CLAUDE_WINDOW_SECONDS=18000
CLAUDE_WAKE_DELAY_SECONDS=10
CLAUDE_WEEKLY_WINDOW_SECONDS=604800
CLAUDE_WEEKLY_WAKE_DELAY_SECONDS=10
# Optional: token generated by `claude setup-token`
CLAUDE_CODE_OAUTH_TOKEN=
# Legacy alias (still supported): CLAUDE_AUTH_TOKEN=

# Codex provider settings
CODEX_MODEL=gpt-5.1-codex-mini
CODEX_WAKEUP_MESSAGE=say hi
CODEX_RESET_MODE=rolling
CODEX_WINDOW_SECONDS=18000
CODEX_WAKE_DELAY_SECONDS=10
CODEX_WEEKLY_WINDOW_SECONDS=604800
CODEX_WEEKLY_WAKE_DELAY_SECONDS=10
